[core]
    excludesfile = ~/.gitignore
[color]
    ui = true
[color "diff"]
    meta = blue
[push]
    default = simple
[merge]
    tool = vimdiff
[alias]
    a = add
    ap = add -p
    b = branch
    ci = commit
    co = checkout
    d = diff
    ds = diff --staged
    f = fetch
    g = grep
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
    st = status
    tl = tag --sort "v:refname"
    undo-commit = reset --soft 'HEAD^'
[include]
    path = ~/dotfiles/extra/gitconfig_extra
