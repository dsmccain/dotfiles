[core]
    excludesfile = ~/.gitignore
[color]
    ui = true
[push]
    default = simple
[merge]
    tool = vimdiff
[alias]
    a = add
    ci = commit
    co = checkout
    df = diff
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
    st = status
    undo-commit = reset --soft 'HEAD^'
[include]
    path = ~/dotfiles/extra/gitconfig_extra
